script(type="text/x-template" id="bucketlistItems")
    form
        .form-group
            label(for="name") 
            input.form-control(type="text" placeholder="Your new bucketlist item" v-model="name")
            .radio-inline
                label(for="done") Yes
                input(type="radio" name="doneOptions" id="yesDone" value="yes") 
            .radio-inline
                label(for="done") No
                input(type="radio" name="doneOptions" id="noDone" value="no" checked) 
            router-link(v-bind:to="{ name: 'home' }")  
                button(type="submit" v-on:click.prevent.stop="addBucketlistItem").btn.btn-default Create new item
