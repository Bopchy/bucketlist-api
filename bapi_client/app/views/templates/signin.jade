script(type="text/x-template" id="signin")
    .col-xs-10.col-xs-offset-1.col-md-6.col-md-offset-3
        bapi-navbar
        bapi-footer
        .jumbotron
            .alert(v-bind:class="{'alert-danger': !formFilled, 'alert-success': formFilled }") {{ responseMessage }}
            form
                .form-group
                    label(for="username") Username
                    input.form-control(type="text" placeholder="Your username" v-model="username")
                .form-group
                    label(for="password]") Password
                    input.form-control(type="password" placeholder="Your password" v-model="password")
                
                button(type="submit" v-on:click.prevent.stop="loginUser").btn.btn-default Login
                
            router-link(to="signUp") Not yet a user? Click here to sign up.
